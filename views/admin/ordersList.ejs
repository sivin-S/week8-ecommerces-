        .search-bar {
            max-width: 300px;
            margin-bottom: 20px;
        }

        .in-active{
            border: 3px solid  #eef7ff;
            color: #eef7ff !important;
            border-radius: 12px;
        }

        .sidebar .nav-link.active {
            background-color: #eef7ff;
            color: #4D869C;
            border-radius: 12px;
        }
        .main-content {
            margin-left: 250px;
            padding: 20px;
        } 
      
        .table-responsive {
            overflow-x: auto;
        }
        .search-bar {
            max-width: 300px;
            margin-bottom: 20px;
        }
        .user-list-header {
            background-color: #4D869C;
            color: #eef7ff;
            padding: 10px;
            border-radius: 5px 5px 0 0;
        }
        .search-input {
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
            margin-left: 10px;
        }


        input[type="search"]{
           color: #4D869C;
           padding: 12px 12px;
           margin-top: 5px;
           border: 1px solid #4D869C;
           outline: #4D869C;
        }

    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block sidebar collapse">
                <div class="position-sticky pt-3">
                    <div class="mb-4 px-3">
                        <i class="fas fa-user-circle"></i> Admin Dashboard
                    </div>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link in-active" href="/admin"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link in-active" href="/admin/userList"><i class="fas fa-users"></i> Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/admin/orderList"><i class="fas fa-list"></i> Order list</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link in-active" href="/admin/paymentMethods"><i class="fas fa-credit-card"></i> Payment</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link in-active" href="/admin/salesReport"><i class="fas fa-chart-bar"></i> Report</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link in-active" href="/admin/categories"><i class="fas fa-folder"></i> Category</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link in-active" href="/admin/orderStatus"><i class="fas fa-truck"></i> Orders Status</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link in-active" href="/admin/transactionHistory"><i class="fas fa-history"></i> Transaction history</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link in-active" href="/admin/addProducts"><i class="bi bi-bag-plus-fill"></i>Add Product </a>
                        </li>
                       
                        <li class="nav-item">
                            <a class="nav-link in-active" href="/admin/couponsHistory"><i class="fas fa-ticket-alt"></i> Coupons history</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link in-active" href="/admin/notifications"><i class="fas fa-bell"></i> Notifications</a>
                        </li>
                    </ul>
                    <div class="mt-5 px-3">
                        <a href="/admin/logout"><button class="btn btn-outline-light w-100" style="padding: 12px;background-color: #EEF7FF;color: #4D869C;margin-top: -20px;">LOGOUT</button></a>
                    </div>
                </div>
            </nav>

            <!-- Main content -->
            <main class="ms-sm-auto  px-md-4 main-content  p-5" style="width: 80%;">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom" style="border-bottom-color: #4D869C !important;">
                    <h1 class="h2" style="color: #4D869C;">Dashboard / Order List</h1>
                </div>
                <div class="bg-white p-4 rounded shadow-sm border" style="border-color: #4D869C !important;">
                    <div class="user-list-header d-flex justify-content-between align-items-center">
                        <h2>Order List</h2>
                        <div class="search-bar">
                            <input type="search" class="search-input" id="orderSearch" placeholder="Search for orders.." onkeyup="searchTable()">
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover" id="orderTable" style="color: #4D869C;">
                            <thead>
                                <tr>
                                    <th>No.</th>
                                    <th>Product count</th>
                                    <th>Order Status</th>
                                    <th>Order Date</th>
                                    <th>Customer Name</th>
                                    <th>Quantity</th>
                                    <th>Total Amount</th>
                                    <th>Payment method</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(checkOut){ %>
                                    <% checkOut.forEach(function(data,index){ %>
                                        <tr>
                                            <td><%=index+1 %></td>
                                            <td id="productCount"><b class="ms-3"><%=data.cart.items.length %></b></td>
                                            <td><%=data.orderStatus%></td>
                                            <td><%=new Date(data.updatedAt).toLocaleDateString('en-US')  %></td>
                                            <td><%=data.address.username  %></td>
                                            <td><%=data.cart.items[index].quantity  %></td>
                                            <td><%=data.totalPrice  %></td>
                                            <td><%=data.paymentMethod  %></td>
                                            <td>
                                              <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#orderInfoModal" onclick="showOrderInfo('<%= data._id %>')">more info</button>
                                            </td>
                                        </tr>
                                    <%  })%>
                                <%  }%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Modal Structure -->
    <div class="modal fade" id="orderInfoModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="orderInfoModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="orderInfoModalLabel">Order Information</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
             <!-- product and user info -->
              <div class="" style="height: 500px;overflow-y: scroll;">
                  <h2>User info</h2>
                  <hr>
                  <input type="text" class="border-0 text-capitalize w-100 py-2"  placeholder="user name" readonly style="color:#4d859c;">
                  <input type="text" class="border-0 text-capitalize w-100 mt-2 py-2"  placeholder="phone no" readonly style="color:#4d859c;">
                  <input type="text" class="border-0 text-capitalize w-100 mt-2 py-2"  placeholder="country" readonly style="color:#4d859c;">
                  <input type="text" class="border-0 text-capitalize w-100 mt-2 py-2"  placeholder="email" readonly style="color:#4d859c;">
                  <input type="text" class="border-0 text-capitalize w-100 mt-2 py-2"  placeholder="landmark" readonly style="color:#4d859c;">
                  <input type="text" class="border-0 text-capitalize w-100 mt-2 py-2"  placeholder="locality" readonly style="color:#4d859c;">
                  <input type="text" class="border-0 text-capitalize w-100 mt-2 py-2"  placeholder="phone" readonly style="color:#4d859c;">
                  <input type="text" class="border-0 text-capitalize w-100 mt-2 py-2 mb-3"  placeholder="state" readonly style="color:#4d859c;">
                  <h2>Product info</h2>
                  <hr>
                  <div id="productInfoContainer"></div>
              </div>
          </div>
          <div class="modal-footer">
            <!-- <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button> -->
          </div>
        </div>
      </div>
    </div>

    <script>
        function searchTable() {
            var input, filter, table, tr, td, i, j, txtValue;
            input = document.getElementById("orderSearch");
            filter = input.value.toLowerCase();
            table = document.getElementById("orderTable");
            tr = table.getElementsByTagName("tr");
            for (i = 1; i < tr.length; i++) {
                tr[i].style.display = "none";
                td = tr[i].getElementsByTagName("td");
                for (j = 0; j < td.length; j++) {
                    if (td[j]) {
                        txtValue = td[j].textContent || td[j].innerText;
                        if (txtValue.toLowerCase().indexOf(filter) > -1) {
                            tr[i].style.display = "";
                            break;
                        }
                    }
                }
            }
        }


        function showOrderInfo(orderId) {
    fetch(`/admin/orderDetails/${orderId}`)
        .then(response => response.json())
        .then(data => {
            // Populate user info
            document.querySelector('#orderInfoModal input[placeholder="user name"]').value = data.address.username;
            document.querySelector('#orderInfoModal input[placeholder="phone no"]').value = data.address.phone;
            document.querySelector('#orderInfoModal input[placeholder="country"]').value = data.address.country;
            document.querySelector('#orderInfoModal input[placeholder="email"]').value = data.address.email;
            document.querySelector('#orderInfoModal input[placeholder="landmark"]').value = data.address.landmark;
            document.querySelector('#orderInfoModal input[placeholder="locality"]').value = data.address.locality;
            document.querySelector('#orderInfoModal input[placeholder="phone"]').value = data.address.phone;
            document.querySelector('#orderInfoModal input[placeholder="state"]').value = data.address.state;

            // Clear previous product info
            const productInfoContainer = document.getElementById('productInfoContainer');
            productInfoContainer.innerHTML = '';

            // Populate product info for each item in the cart
            data.cart.items.forEach((item,index) => {
                const product = item.product;
                const variant = item.variant;

                const productInfoHtml = `
                     <h4 class="mt-2">Product ${index + 1}</h4>
                    <input type="text" class="w-100 mt-2 py-2 border-0 text-capitalize" placeholder="Product name" value="${product.name}" readonly style="color:#4d859c;">
                    <input type="text" class="w-100 mt-2 py-2 border-0 text-capitalize" placeholder="size" value="${variant.size}" readonly style="color:#4d859c;">
                    <input type="text" class="w-100 mt-2 py-2 border-0 text-capitalize" placeholder="color" value="${variant.color}" readonly style="color:#4d859c;">
                    <input type="text" class="w-100 mt-2 py-2 border-0 text-capitalize" placeholder="price" value="${item.price}" readonly style="color:#4d859c;">
                `;

                productInfoContainer.insertAdjacentHTML('beforeend', productInfoHtml);
            });
        })
        .catch(error => {
            console.error('Error fetching order details:', error);
        });
}



