    <section class="cart_area">
        <div class="container">
            <div class="cart_inner">
                <div class="table-responsive">
                    <% if (cart) { %>
                      
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Product</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">Total</th>
                                </tr>
                            </thead>
                           
                            <form action="/updateCart" method="post" id="updateCartForm">
                            <tbody id="cart-items">
                                <% cart.items.forEach(function(data,index){ %>
                                <tr>
                                    <td>
                                        <div class="media">
                                            <div class="d-flex">
                                                <img class="img-fluid" src="<%= data.product.variants[0]?.imageUrls[0] %>" width="100" height="100" alt="img">
                                            </div>
                                            <div class="media-body">
                                                <p><%=data.product.name %></p>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <h5>₹<%=data.product.price %></h5>
                                    </td>
                                    <td>
                                        <div class="product_count">
                                            <% if (data.product.variants[0] && data.product.variants[0].stock) { %>
                                                <input type="text" name="qty" class="qty" value="<%=data.quantity  %>" title="Quantity:" readonly>
                                                <input type="text" name="productId"  value="<%=data.product._id %>" hidden>
                                                <input type="hidden" name="updatedQuantities" id="updatedQuantities">
                                                <button onclick="changeQuantity(this, 1, <%= data.product.variants[0].stock %>)" class="increase items-count" type="button"><i class="lnr lnr-chevron-up"></i></button>
                                                <button onclick="changeQuantity(this, -1, <%= data.product.variants[0].stock %>)" class="reduced items-count" type="button"><i class="lnr lnr-chevron-down"></i></button>
                                            <% } else { %>
                                                <p>Stock information unavailable..........</p>
                                            <% } %>
                                        </div>
                                    </td>                                    
                                    <td>
                                        <h5 class="item-total">₹<%=data.product.price %></h5>
                                    </td>
                                    <td>
                                        <a href="/removeProductFromCart/<%=encodeURIComponent(data.product._id)%>" style="text-decoration: none;color:red;border: 1px solid red;padding: 12px 20px;">Remove</a>
                                    </td>
                                </tr>
                                <% }) %>
                                <tr>
                                    <td>
                                      <h5>Subtotal</h5>
                                    </td>
                                    <td>
                                      <h5 id="subtotal">₹<%= cart.totalAmount.toFixed(2) %></h5>
                                      <input type="hidden" name="totalAmount" id="subtotals" value="<%= cart.totalAmount %>">
                                    </td>
                                  </tr>
                                  
                                <tr class="out_button_area">
                                    <td colspan="2"></td>
                                    <td></td>
                                    <td>
                                        <div class="checkout_btn_inner d-flex align-items-center">
                                            <a class="gray_btn" href="/shop">Continue Shopping</a>
                                            <button class="primary-btn" type="submit" style="border: none;outline: none;">Proceed to checkout</button>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                           </form>
                       
                        </table>
                   
                    <% } else { %>
                        <div class="text-center py-5">
                            <h2>Your cart is empty</h2>
                            <p>Looks like you haven't added any items to your cart yet.</p>
