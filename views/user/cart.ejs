    <!-- Custom Script for Search and Quantity -->
    <script>
        document.getElementById('search-icon').addEventListener('click', function() {
            document.getElementById('search_input_box').style.display = 'block';
            document.getElementById('search_input').focus();
        });

        document.getElementById('close_search').addEventListener('click', function() {
            document.getElementById('search_input_box').style.display = 'none';
        });

        document.addEventListener('click', function(event) {
            var searchInputBox = document.getElementById('search_input_box');
            if (!searchInputBox.contains(event.target) && event.target !== document.getElementById('search-icon')) {
                searchInputBox.style.display = 'none';
            }
        });

        //quantity
        function changeQuantity(button, increment,maxStock) {
            var input = button.parentElement.querySelector('.qty');
            var currentValue = parseInt(input.value, 10);
            if (!isNaN(currentValue)) {
                let newValue = currentValue + increment;
                newValue = Math.min(Math.max(1, newValue),maxStock);
                input.value= newValue;
                updateTotal(button);
            }
        }

        
    function updateTotal(button) {
        var row = button.closest('tr');
        var quantity = parseInt(row.querySelector('.qty').value, 10);
        var price = parseFloat(row.querySelector('td:nth-child(2) h5').textContent.replace('₹', ''));
        var total = quantity * price;
        row.querySelector('.item-total').textContent = '₹' + total.toFixed(2);
        updateSubtotal();
    }

    function updateSubtotal() {
  var rows = document.querySelectorAll('#cart-items tr:not(:last-child):not(:nth-last-child(2))');
  var subtotal = 0;
  rows.forEach(function(row) {
    var quantity = parseInt(row.querySelector('.qty').value, 10);
    var price = parseFloat(row.querySelector('td:nth-child(2) h5').textContent.replace('₹', ''));
    subtotal += quantity * price;
  });
  document.getElementById('subtotal').textContent = '₹' + subtotal.toFixed(2);
  document.getElementById('subtotals').value = subtotal.toFixed(2);
}

       

    // Call updateSubtotal initially to set the correct value
    document.addEventListener('DOMContentLoaded', function() {
        updateSubtotal();
    });


        
        // Function to hide flash messages
function hideFlashMessages() {
    const successAlert = document.getElementById('successAlert');
    const errorAlert = document.getElementById('errorAlert');

    if (successAlert) {
        setTimeout(() => {
            successAlert.style.display = 'none';
        }, 5000);
    }

    if (errorAlert) {
        setTimeout(() => {
            errorAlert.style.display = 'none';
        }, 5000);
    }
}

// Call the function when the DOM is loaded
document.addEventListener('DOMContentLoaded', hideFlashMessages);


document.getElementById('updateCartForm').addEventListener('submit', function(e) {
  e.preventDefault();
  
  var updatedQuantities = [];
  var rows = document.querySelectorAll('#cart-items tr');
  
  rows.forEach(function(row, index) {
    var productId = row.querySelector('input[name="productId"]').value;
    var quantity = parseInt(row.querySelector('.qty').value, 10);
    
    // Log the values to debug
    console.log(`Product ID: ${productId}, Quantity: ${quantity}`);
    
    if (productId && !isNaN(quantity)) {
      updatedQuantities.push({
        productId: productId,
        quantity: quantity
      });
    }
  });

  // Log the JSON string to debug
//   console.log('Updated Quantities JSON:', JSON.stringify(updatedQuantities));

  document.getElementById('updatedQuantities').value = JSON.stringify(updatedQuantities);
  
  this.submit();
});









    </script>
