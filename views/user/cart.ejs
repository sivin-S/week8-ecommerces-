    <script>
        // Function to change quantity
        function changeQuantity(button, increment, maxStock) {
            var row = button.closest('tr');
            var input = row.querySelector('.qty');
            var currentValue = parseInt(input.value, 10);
            if (!isNaN(currentValue)) {
                let newValue = currentValue + increment;
                newValue = Math.min(Math.max(1, newValue), maxStock);
                input.value = newValue;
                updateTotal(row, newValue);
                updateQuantityInDatabase(row, newValue);
            }
        }

        // Function to update total
        function updateTotal(row, quantity) {
            var price = parseFloat(row.querySelector('td:nth-child(2) h5').textContent.replace('₹', ''));
            var total = quantity * price;
            row.querySelector('.item-total').textContent = '₹' + total.toFixed(2);
            updateSubtotal();
        }

        // Function to update subtotal
        function updateSubtotal() {
            var rows = document.querySelectorAll('#cart-items tr:not(:last-child):not(:nth-last-child(2))');
            var subtotal = 0;
            rows.forEach(function(row) {
                var quantity = parseInt(row.querySelector('.qty').value, 10);
                var price = parseFloat(row.querySelector('td:nth-child(2) h5').textContent.replace('₹', ''));
                subtotal += quantity * price;
            });
            document.getElementById('subtotal').textContent = '₹' + subtotal.toFixed(2);
            document.getElementById('subtotals').value = subtotal.toFixed(2);
        }

        // Function to update quantity in database
        async function updateQuantityInDatabase(row, quantity) {
            var productId = row.getAttribute('data-product-id');
            var variantColor = row.getAttribute('data-variant-color');
            var variantSize = row.getAttribute('data-variant-size');

            try {
                const response = await fetch('/updateQuantity', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        productId: productId,
                        variantColor: variantColor,
                        variantSize: variantSize,
                        quantity: quantity
                    })
                });

                const result = await response.json();

                if (result.success) {
                    const successAlert = document.createElement('div');
                    successAlert.id = 'successAlert';
                    successAlert.className = 'alert alert-success';
                    successAlert.role = 'alert';
                    successAlert.style.position = 'fixed';
                    successAlert.style.top = '20px';
                    successAlert.style.right = '20px';
                    successAlert.style.zIndex = '1000';
                    successAlert.textContent = 'The quantity has been updated successfully.';
                    document.body.appendChild(successAlert);
                    hideFlashMessages();
                } else {
                    const errorAlert = document.createElement('div');
                    errorAlert.id = 'errorAlert';
                    errorAlert.className = 'alert alert-danger';
                    errorAlert.role = 'alert';
                    errorAlert.style.position = 'fixed';
                    errorAlert.style.top = '20px';
                    errorAlert.style.right = '20px';
                    errorAlert.style.zIndex = '1000';
                    errorAlert.textContent = 'Failed to update the quantity. Please try again.';
                    document.body.appendChild(errorAlert);
                    hideFlashMessages();
                }
            } catch (error) {
                const errorAlert = document.createElement('div');
                errorAlert.id = 'errorAlert';
                errorAlert.className = 'alert alert-danger';
                errorAlert.role = 'alert';
                errorAlert.style.position = 'fixed';
                errorAlert.style.top = '20px';
                errorAlert.style.right = '20px';
                errorAlert.style.zIndex = '1000';
                errorAlert.textContent = 'An error occurred while updating the quantity. Please try again.';
                document.body.appendChild(errorAlert);
                hideFlashMessages();
            }
        }

        // Function to hide flash messages
        function hideFlashMessages() {
            const successAlert = document.getElementById('successAlert');
            const errorAlert = document.getElementById('errorAlert');

            if (successAlert) {
                setTimeout(() => {
                    successAlert.style.display = 'none';
                }, 1000); 
            }

            if (errorAlert) {
                setTimeout(() => {
                    errorAlert.style.display = 'none';
                }, 1000); 
            }
        }

        // Call updateSubtotal initially to set the correct value
        document.addEventListener('DOMContentLoaded', function() {
            // updateSubtotal();
            hideFlashMessages()
        });
    </script>


