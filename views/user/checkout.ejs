  <body>
    <!-- Start Banner Area -->
    <section class="banner-area organic-breadcrumb">
      <div class="container">
        <div
          class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end"
        >
          <div class="col-first">
            <h1>Checkout</h1>
            <nav class="d-flex align-items-center">
              <a href="/">Home<span class="lnr lnr-arrow-right"></span></a>
              <p>Checkout</p>
            </nav>
          </div>
        </div>
      </div>
    </section>
    <!-- End Banner Area -->

    <!--================Checkout Area =================-->
    <!-- form -->
    <form id="checkoutForm" action="/checkout" method="post">
      <section class="checkout_area section_gap">
        <div class="container">
          <div class="cupon_area">
            <div class="check_title">
              <h2>Have a coupon?</h2>
            </div>
            <input type="text" placeholder="Enter coupon code" />
            <button class="tp_btn">Apply Coupon</button>
          </div>
          <div class="billing_details">
            <div class="row">
              <div class="col-lg-8 border shadow-sm p-4">
                <h3>Billing Details</h3>
                <div
                  class="w-100"
                  style="height: 500px; overflow-y: auto;"
                >
                  <!-- address loop start -->
                  <% if(user) {%>
                  <% user[0].addresses.forEach((address,index) => { %>
                  <div class="mt-3 mb-3">
                    <div class="border d-flex flex-column p-3">
                      <div
                        class="d-flex align-items-center"
                        style="width: 100%; height: 50px;"
                      >
                        <!-- logic default address here pending -->

                        <h2 class="w-100">
                          <%= (index === 0) ? 'Default Address' : '' %>
                        </h2>
                       <div class="d-flex">
                        <a href="/profile" class="btn btn-primary pe-2 mx-2">
                           Edit
                        </a>
                        <input 
                        type="radio"
                        name="address"
                        value="<%= address?._id %>"
                        <%= (index === 0) ? 'checked' : '' %>
                      />
                       </div>
                      </div>
                      <input
                        class="py-2 px-2 mt-2"
                        readonly
                        value="<%= address?.username %>"
                        type="text"
                        placeholder="username"
                      />
                      <input
                        class="py-2 px-2 mt-2"
                        readonly
                        value="<%= address?.phone %>"
                        type="text"
                        placeholder="phone"
                      />
                      <input
                        class="py-2 px-2 mt-2"
                        readonly
                        value="<%= address?.zip %>"
                        type="text"
                        placeholder="zip"
                      />
                      <input
                        class="py-2 px-2 mt-2"
                        readonly
                        value="<%= address?.locality %>"
                        type="text"
                        placeholder="locality"
                      />
                      <input
                        class="py-2 px-2 mt-2"
                        readonly
                        value="<%= address?.state %>"
                        type="text"
                        placeholder="state"
                      />
                      <input
                        class="py-2 px-2 mt-2"
                        readonly
                        value="<%= address?.country %>"
                        type="text"
                        placeholder="country"
                      />
                      <input
                        class="py-2 px-2 mt-2"
                        readonly
                        value="<%= address?.landmark %>"
                        type="text"
                        placeholder="landmark"
                      />
                    </div>
                  </div>
                  <% }) %>
                  <% } %>
                  <!-- address loop end -->
                </div>
              </div>
              <div class="col-lg-4">
                <div class="order_box">
                  <div>
                    <h2>
                      In Your Cart <span>(<%= cart[0]?.items.length %>)</span>
                    </h2>
                  </div>
                  <ul class="list list_2">
                    <li>
                      <a href="#"
                        >Subtotal <span>₹<%= cart[0]?.totalAmount %></span></a
                      >
                    </li>
                    <li>
                      <a href="#"
                        >Shipping <span>Flat rate: ₹500.00</span></a
                      >
                    </li>
                    <li>
                      <a href="#"
                        >Total <span>₹<%= cart[0]?.totalAmount - 50 %></span></a
                      >
                    </li>
                  </ul>
                  <div class="payment_item">
                    <div class="mt-3">
                      <input
                        type="radio"
                        id="f-option5"
                        name="paymentMethod"
                        value="COD"
                      />
                      <label for="f-option5">Cash on delivery</label>
                    </div>
                  </div>
                  <div class="payment_item active">
                    <div class="mb-3 mt-3">
                      <input
                        type="radio"
                        id="f-option6"
                        name="paymentMethod"
                        value="Online"
                      />
                      <label for="f-option6">Razorpay </label>
                    </div>
                  </div>
                  <button type="submit" class="primary-btn">Pay</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </form>
    <!--================End Checkout Area =================-->

    <!-- start footer Area -->
    <footer class="footer-area section_gap">
      <div class="container">
        <div class="row">
          <div class="col-6">
            <div class="single-footer-widget mail-chimp">
              <h6 class="mb-20">Brand</h6>
              <ul class="instafeed d-flex flex-wrap">
                <li><img src="img/i1.jpg" alt="" /></li>
                <li><img src="img/i2.jpg" alt="" /></li>
                <li><img src="img/i3.jpg" alt="" /></li>
              </ul>
            </div>
          </div>
          <div class="col-6 d-flex justify-content-end align-content-center">
            <div class="single-footer-widget w-50">
              <h6>Follow Us</h6>
              <p>Let us be social</p>
              <div class="footer-social d-flex align-items-center">
                <a href="#"><i class="fa fa-facebook"></i></a>
                <a href="#"><i class="fa fa-twitter"></i></a>
              </div>
            </div>
          </div>
        </div>
        <div
          class="footer-bottom d-flex justify-content-center align-items-center flex-wrap"
        >
          <p class="footer-text m-0">
            Copyright &copy;&nbsp;
            <script>
              document.write(new Date().getFullYear());
            </script>
          </p>
        </div>
      </div>
    </footer>
