    <!--================Login Box Area =================-->
    <section class="login_box_area section_gap">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="login_box_img h-100">
                        <div class="row hover flex-column align-content-center justify-content-center">
                            <button style="font-size: 1.2rem; padding: 18px 80px; border-radius: 27px; border: none; background-image: linear-gradient(90deg, #ffba00 0%, #ff6c00 100%) !important; outline: none;">
                                <a href="/login" style="color:#ffff;">Login</a>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="login_form_inner">
                        <form class="row login_form" action="/signup" method="post" id="contactForm">
                            <div class="col-md-12 form-group">
                                <input type="text" class="form-control" id="name" name="username" placeholder="Username" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Username'">
                                <div class="invalid-feedback" id="nameError"></div>
                            </div>
                            <div class="col-md-12 form-group">
                                <input type="email" class="form-control" id="email" name="email" placeholder="Email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email'">
                                <div class="invalid-feedback" id="emailError"></div>
                            </div>
                            <div class="col-md-12 form-group">
                                <input type="password" class="form-control" id="password" name="password" placeholder="Password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Password'">
                                <div class="invalid-feedback" id="passwordError"></div>
                            </div>
                            <div class="col-md-12 form-group">
                                <input type="number" class="form-control" id="ageInput" name="age" placeholder="Age" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Age'">
                                <div class="invalid-feedback" id="ageError"></div>
                            </div>
                            <div class="col-md-12 form-group">
                                <select class="form-select form-control" aria-label="Default select example" id="genderInput" name="gender">
                                    <option value="" selected disabled>Gender</option>
                                    <option value="male">Male</option>
                                    <option value="female">Female</option>
                                    <option value="other">Other</option>
                                </select>
                                <div class="invalid-feedback" id="genderError"></div>
                            </div>                            
                            <div class="col-md-12 form-group">
                                <input type="number" class="form-control" id="phone" name="phone" placeholder="Phone" onfocus="this.placeholder = ''" onblur="this.placeholder = 'PhoneNo.'">
                                <div class="invalid-feedback" id="phoneError"></div>
                            </div>
                            <div class="col-md-12 form-group">
                                <input type="text" class="form-control" id="country" name="country" placeholder="Country" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Country'">
                                <div class="invalid-feedback" id="countryError"></div>
                            </div>
                            <div class="col-md-12 form-group">
                                <input type="number" class="form-control" min="0" id="postCode" name="zip" placeholder="Post Code" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Post Code'">
                                <div class="invalid-feedback" id="postCodeError"></div>
                            </div> 
                            <div class="col-md-12 form-group">
                                <input type="text" class="form-control" id="state" name="state" placeholder="State" onfocus="this.placeholder = ''" onblur="this.placeholder = 'State'">
                                <div class="invalid-feedback" id="stateError"></div>
                            </div> 
                            <div class="col-md-12 form-group">
                                <input type="text" class="form-control" id="landMark" name="landmark" placeholder="Land Mark" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Land Mark'">
                                <div class="invalid-feedback" id="landMarkError"></div>
                            </div>
                            <div class="col-md-12 form-group">
                                <input type="text" class="form-control" id="locality" name="locality" placeholder="Locality" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Locality'">
                                <div class="invalid-feedback" id="localityError"></div>
                            </div>
                            <div class="col-md-12 form-group">
                                <button type="submit" value="submit" class="primary-btn" style="border-radius: 30px;padding: 7px 0;">Sign Up</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
